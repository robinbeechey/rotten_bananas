<div class="container">
  <div class="row">
    <h2 class="text-center">Write a review of <em><%= @movie.title %></em>.</h2>
    <div class="col-md-offset-4 col-md-4">     

      <%= form_for ([@movie, @review]) do |f| %>
        <% if @review.errors.any? %>
        <div>
          <h4><%= pluralize(@review.errors.count, "error") %>, prevented your review from being saved:</h4>
          <ul>
            <% @review.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div>
          <%= f.label "text" %>
          <%= f.text_area "text", class: "form-control" %>
        </div>
        <div>
          <%= f.label "rating_out_of_ten" %>
          <%= f.number_field "rating_out_of_ten", min: 1, max: 10 %>
        </div>
        <div><%= f.submit "Submit", class: "btn btn-submit btn-margin" %></div>

      <% end %>
    </div>
  </div>
</div>