


<div class="container">
  <div class="row">
    <div class="col-md-2">
    <%= link_to "Back to all users", admin_users_path, class: "btn btn-info" %>
    </div>
  </div>

  <h2 class="text-center">Edit User</h2>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">

      <%= form_for [:admin, @user] do |f| %>
        <% if @user.errors.any? %>
          <div>
            <h4 class="text-center"><%= pluralize(@user.errors.count, "error") %> ocurred:</h4>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div>
          <%= f.label "email" %><br>
          <%= f.text_field "email", class: "form-control" %>
        </div>
        <div>
          <%= f.label "firstname", "First Name" %><br>
          <%= f.text_field "firstname", class: "form-control" %>
        </div>
        <div>
          <%= f.label "lastname", "Last Name" %><br>
          <%= f.text_field "lastname", class: "form-control" %>
        </div>
        <div>
          <%= f.label "password" %><br>
          <%= f.password_field "password", class: "form-control" %>
        </div>
        <div>
          <%= f.label "password_confirmation" %><br>
          <%= f.password_field "password_confirmation", class: "form-control" %>
        </div>
        <div>
          <%= f.label "admin" %><br>
          <%= f.check_box "admin" %>
        </div>
        <div><%= f.submit "Submit", class: "btn btn-submit btn-margin" %></div>
      <% end %>

    </div>
  </div>
</div>

